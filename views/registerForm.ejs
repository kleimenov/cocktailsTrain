<body>
    <%- include('partials/_header') %>
    <div class="container">
        <div class="d-flex flex-column">
            <form action="/register" method="POST">
                <label class="text-aqua mt-2 font-italic h4" for="email">Please enter your name for registration</label>
                <input class="form-control ml-0 my-1" type="name" name="name" style="width: 300px; margin: 1em" required autofocus>
                <label class="text-aqua mt-2 font-italic h4" for="email">Please enter your email for registration</label>
                <input class="form-control ml-0 my-1" type="email" name="email" style="width: 300px; margin: 1em" required autofocus>
                <label class="text-aqua mt-2 font-italic h4" for="password">Please enter your password for registration</label>
                <input class="form-control ml-0 my-1" type="password" name="password" style="width: 300px; margin: 1em" required autofocus>
                <button type="submit" class="btn border-colour-mod-orange btn-md bg-info rounded-pill text-white">Enroll</button>
            </form>
        </div>

    </div>
    <%- include('partials/_footer') %>

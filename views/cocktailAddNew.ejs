<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <title>webApp</title>
  </head>

  <body>

    <%- include('partials/_header') %>

    <main style="margin: 1em;">
      <h3>Create new cocktail</h3>
      <form class="form-inline" action="/cocktails" method="POST">
        <div class="form-group mb-2">
          <label for="cocktail">New cocktail name:</label>
          <input class="form-control" type="text" name="cocktail" placeholder="we need new URL" style="width: 300px; margin: 1em">
          <fieldset>Ingredients:
          <label for="ingredient1"></label>
          <input class="form-control" id="ingredient1" type="text" name="ingredient1" placeholder="Ingredient one" style="width: 300px; margin: 1em">
          <label for="Volume1"></label>
          <input class="form-control" type="text" name="Volume1" placeholder="Volume of ingredient (ml)" style="width: 300px; margin: 1em">
          <label for="ingredient2"></label>
          <input class="form-control" id="ingredient2" type="text" name="ingredient2" placeholder="Ingredient two" style="width: 300px; margin: 1em">
          <label for="Volume2"></label>
          <input class="form-control" type="text" name="Volume2" placeholder="Volume of ingredient (ml)" style="width: 300px; margin: 1em">

          <label for="ingredient3"></label>
          <input class="form-control" id="ingredient3" type="text" name="ingredient3" placeholder="Ingredient three" style="width: 300px; margin: 1em">
          <label for="Volume3"></label>
          <input class="form-control" type="text" name="Volume3" placeholder="Volume of ingredient (ml)" style="width: 300px; margin: 1em">



          <label for="ingredient4"></label>
          <input class="form-control" id="ingredient4" type="text" name="ingredient4" placeholder="Ingredient four" style="width: 300px; margin: 1em">
          <label for="Volume4"></label>
          <input class="form-control" type="text" name="Volume4" placeholder="Volume of ingredient (ml)" style="width: 300px; margin: 1em">


          <label for="ingredient5"></label>
          <input class="form-control" id="ingredient5" type="text" name="ingredient5" placeholder="Ingredient five" style="width: 300px; margin: 1em">
          <label for="Volume5"></label>
          <input class="form-control" type="text" name="Volume5" placeholder="Volume of ingredient (ml)" style="width: 300px; margin: 1em">




          </fieldset>
          <button type="submit" class="btn btn-primary">For sure</button>
        </div>
      </form>
    </main>
      <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>